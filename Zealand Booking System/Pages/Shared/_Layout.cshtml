@using Zealand_Booking_System_Library.Models
@inject Zealand_Booking_System_Library.Service.NotificationService NotificationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zealand_Booking_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Zealand_Booking_System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @{
                    var role = Context.Session.GetString("Role");
                    var username = Context.Session.GetString("Username");
                    var accountId = Context.Session.GetInt32("AccountID");

                    int unreadNotifications = 0;

                    // Tjek at brugeren er logget ind
                    if (accountId.HasValue)
                    {
                        // Hent antal ulæste notifikationer
                        unreadNotifications = NotificationService.GetUnread(accountId.Value).Count;
                    }
                }

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>

                        @if (accountId != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/CreateBooking">CreateBooking</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/BookingList">BookingList</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Room">Room</a>
                            </li>

                            @if (role == "Administrator")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Accounts/UserList">Brugere</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (accountId == null)
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-page="/Accounts/Login">Login</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-page="/Accounts/Register">Register</a></li>
                        }
                        else
                        {
                            <li class="nav-item d-flex align-items-center me-3 text-muted">
                                Logget ind som: <strong class="ms-1">@username</strong>
                            </li>

                            <li class="nav-item">
                                <form method="post" action="/logout" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>

                            @* Notifikationer *@
                            <li class="nav-item">
                                <a class="nav-link text-dark position-relative" asp-page="/Notifications">
                                    Notifications
                                    @if (unreadNotifications > 0)
                                    {
                                        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">
                                            @unreadNotifications
                                        </span>
                                    }
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Zealand_Booking_System - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>