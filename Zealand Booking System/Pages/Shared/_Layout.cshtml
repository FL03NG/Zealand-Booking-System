<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zealand_Booking_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Zealand_Booking_System.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Zealand_Booking_System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>

                        @* Kun vis disse links hvis brugeren er logget ind *@
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/CreateBooking">CreateBooking</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/BookingList">BookingList</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Room">Room</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">

                        @* Hvis brugeren IKKE er logget ind *@
                        @if (Context.Session.GetInt32("UserId") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Accounts/Login">Login</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Accounts/Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item d-flex align-items-center me-3 text-muted">
                                Logget ind som: <strong class="ms-1">@Context.Session.GetString("Username")</strong>
                            </li>

                            <li class="nav-item">
                                <form method="post" asp-page="/Accounts/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Zealand_Booking_System -
            <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>