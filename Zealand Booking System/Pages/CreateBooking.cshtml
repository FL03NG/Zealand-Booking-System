@page
@model Zealand_Booking_System.Pages.BookingModel
@{
    ViewData["Title"] = "Opret booking";
}

<h3>Opret ny booking</h3>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post" style="width:50%;">
    <!-- Room dropdown -->
    <div class="mb-3">
        <label for="RoomID">Vælg Lokale:</label>
        <select asp-for="NewBooking.RoomID" class="form-control" required>
            <option value="">-- Vælg Lokale --</option>
            @foreach (var room in Model.Rooms)
            {
                <option value="@room.RoomID">
                    @room.RoomName (@room.RoomType, Smartboard: @(room.HasSmartBoard ? "Ja" : "Nej"))
                </option>
            }
        </select>
    </div>

    <!-- Dato -->
    <div class="mb-3">
        <label for="BookingDate">Dato:</label>
        <input asp-for="NewBooking.BookingDate" type="date" class="form-control" required />
    </div>

    <!-- Tidsrum -->
    <div class="mb-3">
        <label for="TimeSlot">Tidsrum:</label>
        <select asp-for="NewBooking.TimeSlot" class="form-control" required>
            <option value="Slot08_10">08:00 - 10:00</option>
            <option value="Slot10_12">10:00 - 12:00</option>
            <option value="Slot12_14">12:00 - 14:00</option>
            <option value="Slot14_16">14:00 - 16:00</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Book tid</button>
</form>

<hr />
