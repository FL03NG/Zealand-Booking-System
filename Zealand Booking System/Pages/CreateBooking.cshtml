@page
@using Zealand_Booking_System_Library.Models
@using Zealand_Booking_System_Library.Repository
@using Zealand_Booking_System_Library.Service
@model Zealand_Booking_System.Pages.Shared.BookingListModel
@{
    ViewData["Title"] = "Opret booking";
}
<h3>Opret ny booking</h3>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post" style="width:50%;">
    <!-- Account dropdown -->
    <div style="margin-bottom:10px;">
        <label for="AccountID">Vælg Account:</label><br />
        <select asp-for="NewBooking.AccountID" id="AccountID" required>
            <option value="">-- Vælg Account --</option>
            @if (Model.Users != null)
            {
                foreach (Account user in Model.Users)
                {
                    <option value="@user.AccountID">@user.Username</option>
                }
            }
        </select>
    </div>

    <!-- Room dropdown -->
    <div style="margin-bottom:10px;">
        <label for="RoomID">Vælg Room:</label><br />
        <select asp-for="NewBooking.RoomID" id="RoomID" required>
            <option value="">-- Vælg Room --</option>
            @if (Model.Rooms != null)
            {
                foreach (Room r in Model.Rooms)
                {
                    <option value="@r.RoomID">@r.RoomDescription</option>
                }
            }
        </select>
    </div>

    <!-- Dato -->
    <div style="margin-bottom:10px;">
        <label for="BookingDate">Dato:</label><br />
        <input asp-for="NewBooking.BookingDate" type="date" id="BookingDate" required />
    </div>

    <!-- Tidsrum -->
    <div style="margin-bottom:10px;">
        <label for="TimeSlot">Tidsrum:</label><br />
        <select asp-for="NewBooking.TimeSlot" id="TimeSlot" required>
            <option value="Morning">Morgen (08-10)</option>
            <option value="Afternoon">Eftermiddag (12-14)</option>
            <option value="Evening">Aften (16-18)</option>
            <option value="Night">Nat (20-22)</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Book tid</button>
</form>
