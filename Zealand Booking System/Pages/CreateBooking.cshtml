@page
@model Zealand_Booking_System.Pages.BookingModel
@{
    ViewData["Title"] = "Opret booking";
}

<section class="my-4 my-md-5">
    <h2 class="zb-section-title mb-3">Opret ny booking</h2>

    @* Besked *@
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <div class="zb-form-card">
        <form method="post">
            <!-- Room dropdown -->
            <div class="mb-3">
                <label for="RoomID" class="form-label">Vælg lokale</label>
                <select asp-for="NewBooking.RoomID" class="form-select" required>
                    <option value="">-- Vælg lokale --</option>
                    @foreach (Zealand_Booking_System_Library.Models.Room room in Model.Rooms)
                    {
                        <option value="@room.RoomID">
                            @room.RoomName (@room.RoomType, Smartboard: @(room.HasSmartBoard ? "Ja" : "Nej"))
                        </option>
                    }
                </select>
            </div>

            <!-- Dato -->
            <div class="mb-3">
                <label for="BookingDate" class="form-label">Dato</label>
                <input asp-for="NewBooking.BookingDate" type="date" class="form-control" required />
            </div>

            <!-- Tidsrum -->
            <div class="mb-3">
                <label for="TimeSlot" class="form-label">Tidsrum</label>
                <select asp-for="NewBooking.TimeSlot" class="form-select" required>
                    <option value="Slot08_10">08:00 - 10:00</option>
                    <option value="Slot10_12">10:00 - 12:00</option>
                    <option value="Slot12_14">12:00 - 14:00</option>
                    <option value="Slot14_16">14:00 - 16:00</option>
                </select>
            </div>

            <button type="submit" class="btn zb-btn-primary">
                Book tid
            </button>
        </form>
    </div>
</section>
