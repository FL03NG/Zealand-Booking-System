@page
@using Zealand_Booking_System_Library.Models
@model Zealand_Booking_System.Pages.Shared.BookingListModel
@{
    ViewData["Title"] = "Lokale bookinger";

    string role = HttpContext.Session.GetString("Role");
    int? accountId = HttpContext.Session.GetInt32("AccountID");
    string[] allowedRoles = new[] { "Administrator", "Teacher" };
}

<section class="my-4 my-md-5">
    <h2 class="zb-section-title mb-3">Lokale bookinger</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }

    <!-- 🔎 SØGNING -->
    <div class="zb-form-card mb-4">
        <form method="post" asp-page-handler="Search" class="mb-0">
            <label for="SearchName" class="form-label">Søg efter booking (brugernavn)</label>
            <input asp-for="SearchName" id="SearchName" class="form-control" placeholder="Skriv fx 'lars'" />
            <button type="submit" class="btn zb-btn-secondary mt-2">Søg</button>
        </form>
    </div>

    <!-- 📋 BOOKINGER TABEL -->
    <div class="zb-table-card">
        <div class="table-responsive">
            <table class="table table-sm align-middle zb-table">
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Account</th>
                        <th>Room</th>
                        <th>Dato</th>
                        <th>Tidsrum</th>
                        <th>Handling</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Bookings != null && Model.Bookings.Count > 0)
                    {
                        foreach (Booking booking in Model.Bookings)
                        {
                            if (Model.EditBookingID == booking.BookingID)
                            {
                                <!-- 🔧 REDIGERINGSTILSTAND -->
                                <tr>
                                    <td>@booking.BookingID</td>
                                    <td>@(booking.Account != null ? booking.Account.Username : $"ID: {booking.AccountID}")</td>
                                    <td>@(booking.Room != null ? booking.Room.RoomName : $"ID: {booking.RoomID}")</td>
                                    <td colspan="3">
                                        <form method="post" asp-page-handler="SaveEdit" class="d-inline">
                                            <input asp-for="EditBooking.BookingID" type="hidden" />
                                            <input asp-for="EditBooking.AccountID" type="hidden" />
                                            <input asp-for="EditBooking.RoomID" type="hidden" />

                                            <div class="mb-2">
                                                <label for="EditBooking_BookingDate" class="form-label">Dato</label>
                                                <input asp-for="EditBooking.BookingDate" id="EditBooking_BookingDate" type="date" class="form-control" />
                                            </div>

                                            <div class="mb-2">
                                                <label for="EditBooking_TimeSlot" class="form-label">Tidsrum</label>
                                                <select asp-for="EditBooking.TimeSlot" id="EditBooking_TimeSlot" class="form-select">
                                                    <option value="Slot08_10">08:00 - 10:00</option>
                                                    <option value="Slot10_12">10:00 - 12:00</option>
                                                    <option value="Slot12_14">12:00 - 14:00</option>
                                                    <option value="Slot14_16">14:00 - 16:00</option>
                                                </select>
                                            </div>

                                            <button type="submit" class="btn btn-success btn-sm">Gem</button>
                                            <a asp-page="./BookingList" class="btn zb-btn-secondary btn-sm">Fortryd</a>
                                        </form>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <!-- 👀 VISNINGSTILSTAND -->
                                <tr>
                                    <td>@booking.BookingID</td>
                                    <td>@(booking.Account != null ? booking.Account.Username : $"ID: {booking.AccountID}")</td>
                                    <td>@(booking.Room != null ? booking.Room.RoomName : $"ID: {booking.RoomID}")</td>
                                    <td>@booking.BookingDate.ToString("dd-MM-yyyy")</td>
                                    <td>@Html.DisplayFor(_ => booking.TimeSlot)</td>
                                    <td>
                                        @if (allowedRoles.Contains(role) || booking.AccountID == accountId)
                                        {
                                            <!-- SLET -->
                                            <form method="post" asp-page-handler="Delete" class="d-inline">
                                                <input type="hidden" name="bookingID" value="@booking.BookingID" />
                                                <button type="submit" class="btn btn-danger btn-sm">Slet</button>
                                            </form>

                                            <!-- REDIGER (kun for admin/lærer) -->
                                            @if (allowedRoles.Contains(role))
                                            {
                                                <form method="post" asp-page-handler="StartEdit" class="d-inline">
                                                    <input type="hidden" name="bookingID" value="@booking.BookingID" />
                                                    <button type="submit" class="btn btn-warning btn-sm">Rediger</button>
                                                </form>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">Ingen bookinger fundet</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
