@page
@using Zealand_Booking_System_Library.Models
@model Zealand_Booking_System.Pages.Shared.BookingListModel
@{
    ViewData["Title"] = "Lokale bookinger";
}

<h2>Lokale bookinger</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<!-- 🔎 SØGNING -->
<form method="post" asp-page-handler="Search" style="margin-bottom:20px; width:50%;">
    <label for="SearchName">Søg efter booking (brugernavn):</label><br />
    <input asp-for="SearchName" id="SearchName" class="form-control" placeholder="Skriv fx 'lars'" />
    <button type="submit" class="btn btn-secondary mt-2">Søg</button>
</form>

<!-- 📋 BOOKINGER TABEL -->
<table class="table table-bordered" style="width:80%;">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Account</th>
            <th>Room</th>
            <th>Dato</th>
            <th>Tidsrum</th>
            <th>Handling</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Bookings != null && Model.Bookings.Count > 0)
        {
            foreach (Booking booking in Model.Bookings)
            {
                if (Model.EditBookingID == booking.BookingID)
                {
                    <!-- 🔧 REDIGERINGSTILSTAND -->
                    <tr>
                        <td>@booking.BookingID</td>
                        <td>@(booking.Account != null ? booking.Account.Username : $"ID: {booking.AccountID}")</td>
                        <td>@(booking.Room != null ? booking.Room.RoomName : $"ID: {booking.RoomID}")</td>
                        <td colspan="3">
                            <form method="post" asp-page-handler="SaveEdit" class="d-inline">

                                <!-- skjulte værdier -->
                                <input asp-for="EditBooking.BookingID" type="hidden" />
                                <input asp-for="EditBooking.AccountID" type="hidden" />
                                <input asp-for="EditBooking.RoomID" type="hidden" />

                                <div class="mb-2">
                                    <label for="EditBooking_BookingDate">Dato:</label>
                                    <input asp-for="EditBooking.BookingDate"
                                           id="EditBooking_BookingDate"
                                           type="date"
                                           class="form-control" />
                                </div>

                                <div class="mb-2">
                                    <label for="EditBooking_TimeSlot">Tidsrum:</label>
                                    <select asp-for="EditBooking.TimeSlot"
                                            id="EditBooking_TimeSlot"
                                            class="form-control">
                                        <option value="Slot08_10">08:00 - 10:00</option>
                                        <option value="Slot10_12">10:00 - 12:00</option>
                                        <option value="Slot12_14">12:00 - 14:00</option>
                                        <option value="Slot14_16">14:00 - 16:00</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-success btn-sm">Gem</button>

                                <!-- Fortryd = ny GET på samme side -->
                                <a asp-page="./BookingList" class="btn btn-secondary btn-sm">Fortryd</a>
                            </form>
                        </td>
                    </tr>
                }
                else
                {
                    <!-- 👀 VISNINGSTILSTAND -->
                    <tr>
                        <td>@booking.BookingID</td>
                        <td>@(booking.Account != null ? booking.Account.Username : $"ID: {booking.AccountID}")</td>
                        <td>@(booking.Room != null ? booking.Room.RoomName : $"ID: {booking.RoomID}")</td>
                        <td>@booking.BookingDate.ToString("dd-MM-yyyy")</td>
                        <td>@booking.TimeSlot</td>
                        <td>
                            <!-- SLET -->
                            <form method="post" asp-page-handler="Delete" class="d-inline">
                                <input type="hidden" name="bookingID" value="@booking.BookingID" />
                                <button type="submit" class="btn btn-danger btn-sm">Slet</button>
                            </form>

                            <!-- REDIGER -->
                            <form method="post" asp-page-handler="StartEdit" class="d-inline">
                                <input type="hidden" name="bookingID" value="@booking.BookingID" />
                                <button type="submit" class="btn btn-warning btn-sm">Rediger</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Ingen bookinger fundet</td>
            </tr>
        }
    </tbody>
</table>
