@page
@model Zealand_Booking_System.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="zb-hero my-4 my-md-5">
    <div class="row align-items-center gy-4">
        <div class="col-lg-6">
            <span class="zb-badge mb-2">For students & teachers</span>
            <h1 class="zb-hero-title mb-3">
                Book a study room at Zealand – fast and easy
            </h1>
            <p class="zb-hero-text mb-4">
                Find and reserve available rooms for group work, projects, or teaching.
                The system is designed with clarity and the official Zealand visual identity in mind.
            </p>

            <div class="d-flex flex-wrap gap-2">
                @{
                    int? loggedId = HttpContext.Session.GetInt32("AccountID");
                }

                @if (loggedId == null)
                {
                    <!-- Not logged in -->
                    <a asp-page="/Accounts/Login" class="btn zb-btn-primary">
                        Log in
                    </a>
                    <a asp-page="/Accounts/Register" class="btn zb-btn-secondary">
                        Create account
                    </a>
                }
                else
                {
                    <!-- Logged in -->
                    <a asp-page="/FindRoom" class="btn zb-btn-primary">
                        Book a room
                    </a>
                    <a asp-page="/BookingList" class="btn zb-btn-secondary">
                        View your bookings
                    </a>
                }
            </div>

            <p class="small text-muted mt-3 mb-0">
                @if (loggedId == null)
                {
                    <span>You must be logged in to book rooms.</span>
                }
                else
                {
                    <span>You are logged in – choose an option above.</span>
                }
            </p>

            <p class="small text-muted mt-3 mb-0">
                Log in with your Zealand account to access all features.
            </p>
        </div>

        <div class="col-lg-6">
            <div class="zb-hero-card shadow-sm">
                <h5 class="mb-3">Next steps</h5>
                <ul class="list-unstyled mb-3">
                    <li class="d-flex mb-2">
                        <span class="zb-step-number me-2">1</span>
                        <div>
                            <strong>Log in</strong><br />
                            <span class="small text-muted">Use your username and password.</span>
                        </div>
                    </li>
                    <li class="d-flex mb-2">
                        <span class="zb-step-number me-2">2</span>
                        <div>
                            <strong>Select date and timeslot</strong><br />
                            <span class="small text-muted">See only rooms that are truly available.</span>
                        </div>
                    </li>
                    <li class="d-flex">
                        <span class="zb-step-number me-2">3</span>
                        <div>
                            <strong>Confirm your booking</strong><br />
                            <span class="small text-muted">Get a clear overview of all your reservations.</span>
                        </div>
                    </li>
                </ul>
                <div class="zb-hero-meta small">
                    <div>Developed as part of a Datamatiker project</div>
                    <div class="text-muted">Zealand · Roskilde</div>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    int? loggedId2 = HttpContext.Session.GetInt32("AccountID");
}

@if (loggedId2 == null)
{
    <!-- Only show this section when NOT logged in -->
    <section class="my-5">
        <h2 class="zb-section-title mb-3">Why use this system?</h2>
        <p class="text-muted mb-4">
            The system helps optimize Zealand’s room usage and makes it easy for students
            and teachers to find available rooms for study activities.
        </p>

        <div class="row gy-4">
            <div class="col-md-4">
                <div class="zb-info-card h-100">
                    <h5 class="mb-2">Room overview</h5>
                    <p class="small text-muted mb-0">
                        View all relevant rooms in one place – filtered by campus, size, and equipment.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="zb-info-card h-100">
                    <h5 class="mb-2">No double bookings</h5>
                    <p class="small text-muted mb-0">
                        The system automatically checks if the room is already booked at the selected time.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="zb-info-card h-100">
                    <h5 class="mb-2">Designed for students</h5>
                    <p class="small text-muted mb-0">
                        Layout and colors are inspired by zealand.dk to feel familiar and easy to navigate.
                    </p>
                </div>
            </div>
        </div>
    </section>
}
