@page
@model Zealand_Booking_System.Pages.RoomModel
@{
    /*
        User role and identity are retrieved from session data
        to control which actions and UI elements are available.
        This keeps authorization logic consistent with the rest of the application.
    */
    string role = HttpContext.Session.GetString("Role");
    int? accountId = HttpContext.Session.GetInt32("AccountID");
    // Only users with these roles are allowed to manage rooms
    string[] allowedRoles = new[] { "Administrator", "Teacher" };
}
<section class="my-4 my-md-5">
    <!--
        The room management section provides both overview and
        administrative actions in one place to reduce navigation complexity.
    -->
    <h2 class="zb-section-title mb-3">Rooms</h2>
    <div class="zb-form-card mb-4">
        @*
            Search and filtering are handled via GET so results
            can be bookmarked, shared, and refreshed safely.
        *@
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-6">
                <label for="SearchString" class="form-label">Search rooms</label>
                <input type="text"
                       name="SearchString"
                       id="SearchString"
                       value="@Model.SearchString"
                       placeholder="Search rooms..."
                       class="form-control" />
            </div>
            <div class="col-md-4">
                <label for="RoomTypeFilter" class="form-label">Sort Roomtype</label>
                @*
                    Room type filtering is optional to allow broad
                    or very specific searches depending on the user's needs.
                *@
                <select name="RoomTypeFilter" id="RoomTypeFilter" class="form-select">
                    <option value="">All</option>
                    @foreach (var type in Enum.GetValues(typeof(Zealand_Booking_System_Library.Models.RoomType)))
                    {
                        if (Model.RoomTypeFilter == type.ToString())
                        {
                            <option value="@type" selected>@type</option>
                        }
                        else
                        {
                            <option value="@type">@type</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn zb-btn-secondary mt-2">Search</button>
            </div>
        </form>
    </div>
    <!--
        Rooms are displayed as cards instead of a table to improve readability
        and support responsive layouts on smaller screens.
    -->
    <div class="row gy-4">
        @foreach (var room in Model.Rooms)
        {
            <div class="col-md-6 col-lg-4">
                <div class="zb-info-card h-100">
                    @if (Model.EditRoomID == room.RoomID)
                    {
                        @*
                            Edit mode replaces display mode inline
                            to keep context and avoid navigating away.
                        *@
                        <form method="post" asp-page-handler="SaveEdit">
                            <input asp-for="EditRoom.RoomID" type="hidden" />

                            <div class="mb-2">
                                <label class="form-label">Room</label>
                                <input asp-for="EditRoom.RoomName" class="form-control" />
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Location</label>
                                <input asp-for="EditRoom.RoomLocation" class="form-control" />
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Description</label>
                                <textarea asp-for="EditRoom.RoomDescription" class="form-control"></textarea>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Roomtype</label>
                                <select asp-for="EditRoom.RoomType"
                                        asp-items="Html.GetEnumSelectList<Zealand_Booking_System_Library.Models.RoomType>()"
                                        class="form-select">
                                </select>
                            </div>

                            <div class="form-check mb-2">
                                <input asp-for="EditRoom.HasSmartBoard" class="form-check-input" type="checkbox" />
                                <label asp-for="EditRoom.HasSmartBoard" class="form-check-label">Has smartboard</label>
                            </div>

                            <button type="submit" class="btn btn-success btn-sm mt-1">Save</button>
                            <a href="/Room" class="btn zb-btn-secondary btn-sm mt-1">Regret</a>
                        </form>
                    }
                    else
                    {
                        @*
                            Display mode focuses on readability and quick actions,
                            keeping details concise but informative.
                        *@
                        <h5 class="card-title">@room.RoomName</h5>
                        <p class="small">
                            Location: @room.RoomLocation <br />
                            Type: @room.RoomType <br />
                            Smartboard: @(room.HasSmartBoard ? "Yes" : "No") <br />
                            @room.RoomDescription
                        </p>
                        @if (allowedRoles.Contains(role))
                        {
                            @*
                                Destructive and administrative actions are
                                restricted to authorized roles only.
                            *@
                            <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this room?');">
                                <input type="hidden" name="roomID" value="@room.RoomID" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                            <form method="post" asp-page-handler="StartEdit" class="d-inline">
                                <input type="hidden" name="roomID" value="@room.RoomID" />
                                <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                            </form>
                        }
                        @*
                            Booking is always available to keep room usage
                            accessible even when management permissions are limited.
                        *@
                        <a asp-page="/CreateBooking" class="btn zb-btn-primary btn-sm mt-1">
                            Book room
                        </a>
                    }
                </div>
            </div>
        }
    </div>
    @if (allowedRoles.Contains(role))
    {
        @*
            Room creation is separated visually and logically
            to reduce accidental changes and improve clarity.
        *@
        <div class="zb-form-card mt-5">
            <h3 class="mb-3">Create new room</h3>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="mb-2">
                    <label for="RoomName" class="form-label">Roomname</label>
                    <input asp-for="NewRoom.RoomName" id="RoomName" required class="form-control" />
                </div>
                <div class="mb-2">
                    <label for="RoomLocation" class="form-label">Location</label>
                    <input asp-for="NewRoom.RoomLocation" id="RoomLocation" required class="form-control" />
                </div>
                <div class="mb-2">
                    <label for="RoomDescription" class="form-label">Description</label>
                    <textarea asp-for="NewRoom.RoomDescription" id="RoomDescription" class="form-control"></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label">Roomtype</label>
                    <select asp-for="NewRoom.RoomType"
                            asp-items="Html.GetEnumSelectList<Zealand_Booking_System_Library.Models.RoomType>()"
                            class="form-select">
                        <option value="">-- Choose type --</option>
                    </select>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="NewRoom.HasSmartBoard" class="form-check-input" type="checkbox" />
                    <label asp-for="NewRoom.HasSmartBoard" class="form-check-label">Has smartboard</label>
                </div>
                <button type="submit" class="btn zb-btn-primary mt-2">Create room</button>
            </form>
        </div>
    }
</section>