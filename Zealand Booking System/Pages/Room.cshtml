@page
@model Zealand_Booking_System.Pages.RoomModel
@{
}
<body>
    @foreach (var room in Model.Room)
    {
        <div class="card">
            <div class="card__bg">
                @* <img src="~/img/@animal.ImagePath" alt="Billede af @animal.Name" class="card-img-top" /> *@
                <div class="card-body">
                    <h5 class="card-title">@room.RoomName</h5>
                    <p class="card-text">
                        Størrelse: @room.Size<br />
                        Lokation: @room.RoomLocation<br />
                        <span>
                            @room.RoomDescription<span /><br />
                    </p>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="animalID" value="@room.RoomID" />
                        <button type="submit">Slet</button>
                    </form>
                </div>
            </div>
        </div>
    }
</body>