@page
@model Zealand_Booking_System.Pages.RoomModel
@{
    string role = HttpContext.Session.GetString("Role");
    int? accountId = HttpContext.Session.GetInt32("AccountID");
    string[] allowedRoles = new[] { "Administrator", "Teacher" };
}

<section class="my-4 my-md-5">
    <h2 class="zb-section-title mb-3">Lokaler</h2>

    <div class="zb-form-card mb-4">
        <form method="get" class="row g-2 align-items-end">
            <!-- SØGEFELT -->
            <div class="col-md-6">
                <label for="SearchString" class="form-label">Søg efter lokaler</label>
                <input type="text"
                       name="SearchString"
                       id="SearchString"
                       value="@Model.SearchString"
                       placeholder="Søg efter lokaler..."
                       class="form-control" />
            </div>

            <!-- ROOMTYPE DROPDOWN -->
            <div class="col-md-4">
                <label for="RoomTypeFilter" class="form-label">Sortér efter RoomType</label>
                <select name="RoomTypeFilter" id="RoomTypeFilter" class="form-select">
                    <option value="">Alle</option>
                    @foreach (var type in Enum.GetValues(typeof(Zealand_Booking_System_Library.Models.RoomType)))
                    {
                        if (Model.RoomTypeFilter == type.ToString())
                        {
                            <option value="@type" selected>@type</option>
                        }
                        else
                        {
                            <option value="@type">@type</option>
                        }
                    }
                </select>
            </div>

            <!-- SUBMIT KNAP -->
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn zb-btn-secondary mt-2">Søg</button>
            </div>
        </form>
    </div>
    <!-- LISTE AF LOKALER -->
    <div class="row gy-4">
        @foreach (var room in Model.Room)
        {
            <div class="col-md-6 col-lg-4">
                <div class="zb-info-card h-100">
                    @if (Model.EditRoomID == room.RoomID)
                    {
                        <!-- REDIGERINGSTILSTAND -->
                        <form method="post" asp-page-handler="SaveEdit">
                            <input asp-for="EditRoom.RoomID" type="hidden" />

                            <div class="mb-2">
                                <label class="form-label">Lokalenavn</label>
                                <input asp-for="EditRoom.RoomName" class="form-control" />
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Lokation</label>
                                <input asp-for="EditRoom.RoomLocation" class="form-control" />
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Beskrivelse</label>
                                <textarea asp-for="EditRoom.RoomDescription" class="form-control"></textarea>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Lokaletype</label>
                                <select asp-for="EditRoom.RoomType"
                                        asp-items="Html.GetEnumSelectList<Zealand_Booking_System_Library.Models.RoomType>()"
                                        class="form-select">
                                </select>
                            </div>

                            <div class="form-check mb-2">
                                <input asp-for="EditRoom.HasSmartBoard" class="form-check-input" type="checkbox" />
                                <label asp-for="EditRoom.HasSmartBoard" class="form-check-label">Har smartboard</label>
                            </div>

                            <button type="submit" class="btn btn-success btn-sm mt-1">Gem</button>
                            <a href="/Room" class="btn zb-btn-secondary btn-sm mt-1">Fortryd</a>
                        </form>
                    }
                    else
                    {
                        <!-- VISNINGSTILSTAND -->
                        <h5 class="card-title">@room.RoomName</h5>
                        <p class="small">
                            Lokation: @room.RoomLocation <br />
                            Type: @room.RoomType <br />
                            Smartboard: @(room.HasSmartBoard ? "Ja" : "Nej") <br />
                            @room.RoomDescription
                        </p>

                        @if (allowedRoles.Contains(role))
                        {
                            <!-- SLET -->
                            <form method="post" asp-page-handler="Delete" class="d-inline">
                                <input type="hidden" name="roomID" value="@room.RoomID" />
                                <button type="submit" class="btn btn-danger btn-sm">Slet</button>
                            </form>

                            <!-- REDIGER -->
                            <form method="post" asp-page-handler="StartEdit" class="d-inline">
                                <input type="hidden" name="roomID" value="@room.RoomID" />
                                <button type="submit" class="btn btn-warning btn-sm">Rediger</button>
                            </form>
                        }

                        <!-- BOOK -->
                        <a asp-page="/CreateBooking" class="btn zb-btn-primary btn-sm mt-1">
                            Book lokalet
                        </a>
                    }
                </div>
            </div>
        }
    </div>

    @if (allowedRoles.Contains(role))
    {
        <!-- FORMULAR TIL AT OPRETTE NYT LOKALE -->
        <div class="zb-form-card mt-5">
            <h3 class="mb-3">Opret nyt lokale</h3>
            <form method="post">
                @Html.AntiForgeryToken()

                <div class="mb-2">
                    <label for="RoomName" class="form-label">Lokalenavn</label>
                    <input asp-for="NewRoom.RoomName" id="RoomName" required class="form-control" />
                </div>

                <div class="mb-2">
                    <label for="RoomLocation" class="form-label">Lokation</label>
                    <input asp-for="NewRoom.RoomLocation" id="RoomLocation" required class="form-control" />
                </div>

                <div class="mb-2">
                    <label for="RoomDescription" class="form-label">Beskrivelse</label>
                    <textarea asp-for="NewRoom.RoomDescription" id="RoomDescription" class="form-control"></textarea>
                </div>

                <div class="mb-2">
                    <label class="form-label">Lokaletype</label>
                    <select asp-for="NewRoom.RoomType"
                            asp-items="Html.GetEnumSelectList<Zealand_Booking_System_Library.Models.RoomType>()"
                            class="form-select">
                        <option value="">-- Vælg type --</option>
                    </select>
                </div>

                <div class="form-check mb-2">
                    <input asp-for="NewRoom.HasSmartBoard" class="form-check-input" type="checkbox" />
                    <label asp-for="NewRoom.HasSmartBoard" class="form-check-label">Har smartboard</label>
                </div>

                <button type="submit" class="btn zb-btn-primary mt-2">Opret lokale</button>
            </form>
        </div>
    }
</section>